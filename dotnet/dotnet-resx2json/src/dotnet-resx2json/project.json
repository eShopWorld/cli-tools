{
  "version": "1.0.0-*",
  "buildOptions": {
    "emitEntryPoint": true,
    "outputName": "dotnet-resx2json",
    "warningsAsErrors": true,
    //"keyFile": "../../../../tools/DevOpsFlex.snk",
    "nowarn": [
      "CS1591" // missing XML docs
    ],
    "xmlDoc": true
  },

  "dependencies": {
    "JetBrains.Annotations": "10.1.5-*",
    "Newtonsoft.Json": "9.0.1",
    "Microsoft.ApplicationInsights": "2.1.0-*",
    "Microsoft.DotNet.Cli.Utils": "1.0.0-*",
    "Microsoft.DotNet.ProjectModel.Workspaces": "1.0.0-*",
    "Microsoft.Extensions.CommandLineUtils": "1.0.0"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dnxcore50", // Jetbrains
        "portable-net45+win8+wp8+wpa81" // CSharp.Workspaces (not in use anymore, keep it here just in case ...)
      ],
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
      }
    },
    "net461": {}
  },
  "scripts": {
    "postcompile": "dotnet pack --no-build -o %compile:OutputDir%\\.."
  }
}
